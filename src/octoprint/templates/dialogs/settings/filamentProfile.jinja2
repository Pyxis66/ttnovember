<form class="form-horizontal">
    <h3>{{ _('Presets') }}</h3>
    <div class="row-fluid">
        <div class="span2"><h4>{{ _('Maker') }}</h4></div>
        <div class="span2"><h4>{{ _('Material') }}</h4></div>
        <div class="span2"><h4>{{ _('Color') }}</h4></div>
        <div class="span2"><h4>{{ _('Extruder') }}</h4></div>
        <div class="span2"><h4>{{ _('Bed') }}</h4></div>
    </div>
    <div data-bind="foreach: filamentProfile">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span2">
                <input type="text" class="span12 text-right" data-bind="value: maker">
            </div>
            <div class="span2">
                <input type="text" class="span12 text-right" data-bind="value: material">
            </div>
            <div class="span2">
                <input type="text" class="span12 text-right" data-bind="value: color">
            </div>
            <div class="input-append span2">
                <input type="number" class="input-mini text-right" data-bind="value: extruder">
                <span class="add-on">&deg;C</span>
            </div>
            <div class="input-append span2">
                <input type="number" class="input-mini text-right" data-bind="value: bed">
                <span class="add-on">&deg;C</span>
            </div>
            <div class="span2">
                <a title="Remove profile" class="btn btn-danger" data-bind="click: $parent.removeFilamentProfile"><i class="fa fa-trash-o"></i></a>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset10 span2">
            <a title="Add Profile" class="btn btn-primary" data-bind="click: addFilamentProfile"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <h3>{{ _('History') }}</h3>
    <div class="row-fluid">
        <div class="span2"><h4>{{ _('Maker') }}</h4></div>
        <div class="span2"><h4>{{ _('Material') }}</h4></div>
        <div class="span2"><h4>{{ _('Color') }}</h4></div>
        <div class="span2"><h4>{{ _('Extruder') }}</h4></div>
        <div class="span2"><h4>{{ _('Bed') }}</h4></div>
    </div>
    <div data-bind="foreach: filamentHistory">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span2">
                <input type="text" class="span12 text-right" data-bind="value: maker">
            </div>
            <div class="span2">
                <input type="text" class="span12 text-right" data-bind="value: material">
            </div>
            <div class="span2">
                <input type="text" class="span12 text-right" data-bind="value: color">
            </div>
            <div class="input-append span2">
                <input type="number" class="input-mini text-right" data-bind="value: extruder">
                <span class="add-on">&deg;C</span>
            </div>
            <div class="input-append span2">
                <input type="number" class="input-mini text-right" data-bind="value: bed">
                <span class="add-on">&deg;C</span>
            </div>
            <div class="span2">
                <a title="Remove profile" class="btn btn-danger" data-bind="click: $parent.removeFilamentHistory"><i class="fa fa-trash-o"></i></a>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset10 span2">
            <a title="Add History" class="btn btn-primary" data-bind="click: addFilamentHistory"><i class="fa fa-plus"></i></a>
        </div>
    </div>
</form>
